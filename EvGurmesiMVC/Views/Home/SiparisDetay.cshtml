
@{
    ViewBag.Title = "SiparisDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="container" style="background-color:whitesmoke">
        <form method="post">


            <div class="row pt-2 justify-content-around">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <ul>
                            <li>@item.SaticiKullanici.KullaniciPazarAdi</li>
                            <hr />
                            <li>@item.AliciKullanici.KullaniciAdres</li>
                            <li>@item.AliciKullanici.Kullaniciilce/@item.AliciKullanici.KullaniciSehir</li>
                            <li>@item.AliciKullanici.KullaniciTelefon</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 offset-lg-1">
                    <div class="footer__widget">
                        <ul>
                            <li><a href="#">Adet : @item.SiparisAdet</a></li>
                            <li><a href="#">Ücret : @item.SiparisToplam</a></li>
                            <li><a href="#">@item.SiparisTarih</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="footer__widget">
                        <ul>
                            <li>Menü</li>
                            <p>@item.Siparisicerik</p>
                        </ul>
                    </div>
                </div>
                <p>Puan : <input type="number" name="SiparisPuan" value="@item.SiparisPuan" max="10" min="1" /></p>
                <p><button type="submit" class="btn btn-outline-success btn-sm">Kaydet</button></p>
                <p>Yorum : <input type="text" name="SiparisYorum" value="@item.SiparisYorum" maxlength="255"></p>

            </div>
        </form>
        <hr />
    </div>

}

